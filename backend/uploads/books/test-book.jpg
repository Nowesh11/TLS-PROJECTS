<svg width="300" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bookGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#059669;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#047857;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="300" height="400" fill="url(#bookGradient)" rx="8"/>
  
  <!-- Book spine -->
  <rect x="20" y="0" width="8" height="400" fill="white" fill-opacity="0.2"/>
  
  <!-- Book icon -->
  <rect x="75" y="100" width="150" height="120" fill="white" fill-opacity="0.2" rx="4"/>
  <rect x="85" y="110" width="130" height="100" fill="white" fill-opacity="0.3" rx="2"/>
  
  <!-- Book lines -->
  <line x1="95" y1="130" x2="205" y2="130" stroke="white" stroke-width="2" opacity="0.6"/>
  <line x1="95" y1="145" x2="185" y2="145" stroke="white" stroke-width="2" opacity="0.6"/>
  <line x1="95" y1="160" x2="195" y2="160" stroke="white" stroke-width="2" opacity="0.6"/>
  <line x1="95" y1="175" x2="175" y2="175" stroke="white" stroke-width="2" opacity="0.6"/>
  <line x1="95" y1="190" x2="190" y2="190" stroke="white" stroke-width="2" opacity="0.6"/>
  
  <!-- Text -->
  <text x="150" y="260" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="18" font-weight="bold">BOOK</text>
  <text x="150" y="285" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14" opacity="0.8">Default Cover</text>
</svg>