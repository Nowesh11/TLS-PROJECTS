<svg width="200" height="300" viewBox="0 0 200 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bookGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4f46e5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#7c3aed;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Book background -->
  <rect width="200" height="300" fill="url(#bookGradient)" rx="8" ry="8"/>
  
  <!-- Book spine highlight -->
  <rect x="0" y="0" width="20" height="300" fill="rgba(255,255,255,0.1)" rx="8" ry="8"/>
  
  <!-- Book icon -->
  <g transform="translate(100, 150)">
    <rect x="-30" y="-40" width="60" height="80" fill="rgba(255,255,255,0.2)" rx="4" ry="4"/>
    <rect x="-25" y="-35" width="50" height="70" fill="rgba(255,255,255,0.1)" rx="2" ry="2"/>
    <line x1="-20" y1="-25" x2="20" y2="-25" stroke="rgba(255,255,255,0.3)" stroke-width="2"/>
    <line x1="-20" y1="-15" x2="20" y2="-15" stroke="rgba(255,255,255,0.3)" stroke-width="2"/>
    <line x1="-20" y1="-5" x2="20" y2="-5" stroke="rgba(255,255,255,0.3)" stroke-width="2"/>
    <line x1="-20" y1="5" x2="15" y2="5" stroke="rgba(255,255,255,0.3)" stroke-width="2"/>
  </g>
  
  <!-- Title placeholder -->
  <text x="100" y="220" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-family="Arial, sans-serif" font-size="14" font-weight="bold">E-BOOK</text>
  <text x="100" y="240" text-anchor="middle" fill="rgba(255,255,255,0.6)" font-family="Arial, sans-serif" font-size="12">Default Cover</text>
</svg>